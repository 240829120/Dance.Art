<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
                    xmlns:dance="http://schemas.dance.com/wpf"
                    xmlns:local="clr-namespace:Dance.Art.Scene">

    <dance:DanceMatrixToMatrixTransform3DConverter x:Key="DanceMatrixToMatrixTransform3DConverter"></dance:DanceMatrixToMatrixTransform3DConverter>

    <DataTemplate x:Key="[Dance.Art.Scene]:Box">
        <hx:MeshGeometryModel3D IsThrowingShadow="True"
                                CullMode="None"
                                Geometry="{Binding Path=Geometry,Mode=OneWay}"
                                Material="{Binding Path=Material,Mode=OneWay}"
                                Transform="{Binding Transform,Mode=TwoWay,Converter={StaticResource DanceMatrixToMatrixTransform3DConverter}}"></hx:MeshGeometryModel3D>
    </DataTemplate>

</ResourceDictionary>